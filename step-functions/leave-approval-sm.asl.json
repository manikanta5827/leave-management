{
  "Comment": "Step function",
  "QueryLanguage": "JSONata",
  "StartAt": "Router",
  "States": {
    "Router": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Arguments": {
        "FunctionName": "${LeaveApprovalLambdaArn}",
        "Payload": {
          "TaskToken": "{% $states.context.Task.Token %}",
          "Payload": "{% $states.input %}"
        }
      },
      "TimeoutSeconds": 60,
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException",
            "Lambda.TooManyRequestsException"
          ],
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "BackoffRate": 2,
          "JitterStrategy": "FULL"
        }
      ],
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "Next": "GenericLambdaErrorHandler"
        }
      ],
      "End": true
    },

    "GenericLambdaErrorHandler": {
      "Type": "Pass",
      "Output": "{% { \"message\": \"Lambda Flow Failed\" } %}",
      "End": true
    }
  }
}
